{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@db/*": ["db/*"],
      "@interfaces/*": ["interfaces/*"],
      "@json/*": ["json/*"],
      "@models/*": ["models/*"],
      "@util/*": ["util/*"]
    }
  },
  "lib": ["es2015"]
}
